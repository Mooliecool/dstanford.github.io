package{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.text.TextField;	public class BlockClass extends MovieClip 	{		var xTarget;		var yTarget;				public function BlockClass() 		{			//this.addEventListener(MouseEvent.ROLL_OVER, blockOver);			//this.addEventListener(MouseEvent.ROLL_OUT, blockOut);		}				public function revealBlock():void		{			xTarget = 0;			yTarget = 0;			this.addEventListener(Event.ENTER_FRAME, moveBlock);		}				public function hideBlock(xTar, yTar):void		{			xTarget = xTar;			yTarget = yTar;			this.addEventListener(Event.ENTER_FRAME, moveBlock);		}				private function moveBlock(e:Event):void		{			if (Math.abs(this.x - xTarget) < 1) {				this.x = xTarget;				this.y = yTarget;				this.removeEventListener(Event.ENTER_FRAME, moveBlock);			} else {				this.x -= (this.x - xTarget)/5; 				this.y -= (this.y - yTarget)/5;			}		}	}	}